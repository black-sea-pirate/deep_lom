# AI Test Platform - Environment Variables Example
# Copy this file to .env and fill in your values

# ===================
# Security
# ===================
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===================
# PostgreSQL Database
# ===================
POSTGRES_SERVER=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=ai_test_platform

# ===================
# Redis
# ===================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ===================
# ChromaDB (Vector DB)
# ===================
CHROMA_HOST=chromadb
CHROMA_PORT=8000
CHROMA_COLLECTION_NAME=materials

# ===================
# OpenAI API
# ===================
OPENAI_API_KEY=sk-proj-your-api-key-here
OPENAI_MODEL=gpt-4.1
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ===================
# Celery
# ===================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ===================
# File Upload
# ===================
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=52428800

# ===================
# CORS Origins
# ===================
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# ===================
# Frontend (Vite)
# ===================
VITE_API_URL=http://localhost:8000/api/v1
VITE_APP_TITLE=AI Test Platform
